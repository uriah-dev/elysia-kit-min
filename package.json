{
  "name": "vercel-test",
  "description": "A modular Elysia boilerplate with Drizzle ORM, full observability (traces/metrics/logs), email templates, background jobs, and flexible deployment options (Vercel, PM2, or Kubernetes).",
  "version": "1.0.3",
  "scripts": {
    "dev": "bun --bun run --watch src/index.ts",
    "start": "bun --bun run src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:dev": "bun run scripts/dev-db.ts up",
    "db:dev:down": "bun run scripts/dev-db.ts down",
    "db:dev:destroy": "bun run scripts/dev-db.ts destroy",
    "db:dev:logs": "bun run scripts/dev-db.ts logs",
    "db:dev:shell": "bun run scripts/dev-db.ts shell",
    "trigger:dev": "bunx --bun trigger.dev@latest dev",
    "trigger:deploy": "bunx --bun trigger.dev@latest deploy",
    "email": "email dev --dir src/emails",
    "docker:build": "docker build --no-cache -t elysia-kit-min .",
    "docker:run": "docker run --rm --name elysia-kit-min --env-file .env elysia-kit-min",
    "docker:start": "bun docker:build && bun docker:run",
    "docker:stop": "docker stop elysia-kit-min",
    "docker:restart": "bun docker:stop && bun docker:start",
    "docker:logs": "docker logs elysia-kit-min"
  },
  "dependencies": {
    "@arcjet/bun": "^1.0.0-beta.17",
    "@arcjet/inspect": "^1.0.0-beta.17",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/html": "^1.4.0",
    "@elysiajs/openapi": "^1.4.13",
    "@paralleldrive/cuid2": "^3.0.6",
    "@react-email/components": "^1.0.4",
    "@react-email/render": "^2.0.4",
    "@trigger.dev/sdk": "4.3.2",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "elysia": "latest",
    "openapi-typescript": "^7.10.1",
    "pino": "^10.2.0",
    "pino-loki": "^3.0.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.8",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "resend": "^6.7.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@react-email/preview-server": "5.2.1",
    "@trigger.dev/build": "4.3.2",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8",
    "react-email": "^5.2.5"
  },
  "module": "api/index.js",
  "main": "api/index.js"
}