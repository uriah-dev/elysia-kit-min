{
  "name": "vercel-test",
  "description": "A modular Elysia boilerplate with Drizzle ORM, full observability (traces/metrics/logs), email templates, background jobs, and flexible deployment options (Vercel, PM2, or Kubernetes).",
  "version": "1.0.3",
  "scripts": {
    "dev": "bun --bun run --watch src/index.ts",
    "start": "bun --bun run src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:dev": "bun run scripts/dev-db.ts up",
    "db:dev:down": "bun run scripts/dev-db.ts down",
    "db:dev:destroy": "bun run scripts/dev-db.ts destroy",
    "db:dev:logs": "bun run scripts/dev-db.ts logs",
    "db:dev:shell": "bun run scripts/dev-db.ts shell",
    "trigger:dev": "bunx --bun trigger.dev@latest dev",
    "trigger:deploy": "bunx --bun trigger.dev@latest deploy",
    "email": "email dev --dir src/emails"
  },
  "dependencies": {
    "@arcjet/bun": "^1.0.0-beta.15",
    "@arcjet/inspect": "^1.0.0-beta.15",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/cron": "^1.4.1",
    "@elysiajs/html": "^1.4.0",
    "@elysiajs/openapi": "^1.4.13",
    "@paralleldrive/cuid2": "^3.0.6",
    "@react-email/components": "^1.0.3",
    "@trigger.dev/sdk": "4.3.1",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "elysia": "latest",
    "pino": "^10.1.0",
    "pino-loki": "^3.0.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.7",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "resend": "^6.6.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@react-email/preview-server": "5.1.1",
    "@trigger.dev/build": "4.3.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8",
    "react-email": "^5.1.1"
  },
  "module": "api/index.js",
  "main": "api/index.js"
}
